.login-form-container()
    form.login-form((ngSubmit)="onSubmit()", [formGroup]="loginForm", novalidate)
        fieldset
            input(
                id="username",
                type="text",
                autocorrect="off",
                autocapitalize="none",
                autofocus,
                required,
                name="username",
                formControlName="username",
                [placeholder]="'LOGIN_COMMON.PLACEHOLDER_AUTH_NAME' | translate"
            )
            ul(class="error-list", *ngIf="loginForm.controls.username.dirty && loginForm.controls.username.invalid")
                li(class="required", translate="COMMON.FORM_ERRORS.REQUIRED")

        fieldset.login-password
            input(
                id="password",
                type="password",
                name="password",
                required,
                formControlName="password",
                [placeholder]="'LOGIN_COMMON.PLACEHOLDER_AUTH_PASSWORD' | translate",
            )
            ul(class="error-list", *ngIf="loginForm.controls.password.dirty && loginForm.controls.password.invalid")
                li(class="required", translate="COMMON.FORM_ERRORS.REQUIRED")

            a.forgot-pass(
                routerLink="/forgot-password",
                title="{{'LOGIN_COMMON.TITLE_LINK_FORGOT_PASSWORD' | translate}}",
                translate="LOGIN_COMMON.LINK_FORGOT_PASSWORD"
            )

            tg-capslock(*ngIf='loginForm.controls.password.dirty')

        fieldset
            button.button-green.submit-button(
                type="submit",
                [title]="'LOGIN_COMMON.ACTION_SIGN_IN' | translate",
                translate="LOGIN_COMMON.ACTION_SIGN_IN"
            )

