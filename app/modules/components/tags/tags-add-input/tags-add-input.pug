.add-tag-input(
    novalidate
    *tgLoading="loadingAddTag"
)
    input.tag-input.e2e-add-tag-input(
        type="text",
        [placeholder]="'COMMON.TAGS.PLACEHOLDER' | translate",
        tg-autofocus,
        [value]="newTag.name",
        (keypress)="setName($event)"
    )

    tg-tags-dropdown(
        *ngIf="newTag.name.length && !disableColorSelection"
        [colorArray]="colorArray",
        [tag]="newTag",
        (selectTag)="addNewTag(name, color)"
    )

    tg-color-selector(
        *ngIf="!disableColorSelection",
        (colorSelected)="newTag.color = $event",
        [isColorRequired]="false"
    )

    tg-svg.save(
        (show)="newTag.name.length",
        svg-icon="icon-save",
        svg-title-translate="COMMON.TAGS.ADD",
        (click)="addTag()"
    )
