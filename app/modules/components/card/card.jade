.card-inner(
    [class]="'zoom-' + zoomLevel",
    [class.card-blocked]="item.get('is_blocked')",
    [class.archived]="archived"
)
    tg-card-tags([tags]="item.get('colorized_tags')", *ngIf="zoom.visibility.tags")
    tg-card-owner([item]="item", [zoom]="zoom")
    div(*ngIf='zoom.visibility.owner')
        tg-card-title([item]="item", [zoom]="zoom")
    tg-card-data([item]="item", [zoom]="zoom")
    tg-card-completion([tasks]="item.get('tasks')", *ngIf="zoom.visibility.extra_info && item.get('tasks').size")
