h1
    span.title(translate="COMMON.FILTERS.TITLE")

form((submit)="false")
    fieldset
        input.e2e-filter-q(
            #q,
            type="text",
            name="q",
            [placeholder]="'COMMON.FILTERS.INPUT_PLACEHOLDER' | translate",
            (change)="changeQ(q.value)"
        )
        tg-svg.search-action(
            svg-icon="icon-search",
            [title]="'COMMON.FILTERS.TITLE_ACTION_SEARCH' | translate"
        )

.filters-step-cat(*ngIf="filters")
    tg-filter-applied([filters]="appliedFilters")
    tg-filter-save-custom()

    .filters-cats
        ul
            li
                tg-filter-category(
                    category="status",
                    [title]="'COMMON.FILTERS.CATEGORIES.STATUS' | translate",
                    [selectedCategory]="selectedCategory",
                    [items]="reformatStatuses(filters.get('statuses'))",
                    (selectCategory)="selectedCategory = $event",
                )
            li
                tg-filter-category(
                    category="tags",
                    [title]="'COMMON.FILTERS.CATEGORIES.TAGS' | translate",
                    [selectedCategory]="selectedCategory",
                    [items]="reformatTags(filters.get('tags'))",
                    [total]="totalNotEmptyTags(filters.get('tags'))",
                    [hideEmpty]="true",
                    (selectCategory)="selectedCategory = $event",
                )

            li
                tg-filter-category(
                    category="assignedTo",
                    [title]="'COMMON.FILTERS.CATEGORIES.ASSIGNED_TO' | translate",
                    [selectedCategory]="selectedCategory",
                    [items]="reformatAssignedTo(filters.get('assigned_to'))",
                    (selectCategory)="selectedCategory = $event",
                )

            li
                tg-filter-category(
                    category="owner",
                    [title]="'COMMON.FILTERS.CATEGORIES.CREATED_BY' | translate",
                    [selectedCategory]="selectedCategory",
                    [items]="reformatOwners(filters.get('owners'))",
                    (selectCategory)="selectedCategory = $event",
                )

            li
                tg-filter-category(
                    category="epic",
                    [title]="'COMMON.FILTERS.CATEGORIES.EPIC' | translate",
                    [selectedCategory]="selectedCategory",
                    [items]="reformatEpics(filters.get('epics'))",
                    (selectCategory)="selectedCategory = $event",
                )

